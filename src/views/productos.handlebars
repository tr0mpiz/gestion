<div class="container">
<div class="row">
    <!-- Earnings (Monthly) Card Example -->
 
  <div class="col-md-12 mb-4">
      <div class="card">
          <div class="d-flex align-items-end row">
              <div class="col-sm-7">
              <div class="card-body">
                  <h5 class="card-title text-primary">GESTION </h5>
                  <p class="mb-4">En esta <span class="fw-bold">seccion</span> aparecen los productos y su informacion</p>

                  <a href="/socios" class="btn btn-sm btn-outline-primary">Ver Tareas</a>
                  <button type="button" class="btn btn-sm  btn-primary " data-bs-toggle="modal" data-bs-target="#modalagregaejercicio">Agregar Producto</button>
              </div>
              </div>
              <div class="col-sm-5 text-center text-sm-left d-none d-sm-block">
              <div class="card-body pb-0 px-0 px-md-4">
                  <img src="../assets/img/illustrations/man-with-laptop-light.png" height="140" alt="View Badge User" data-app-dark-img="illustrations/man-with-laptop-dark.png" data-app-light-img="illustrations/man-with-laptop-light.png">
              </div>
              </div>
          </div>
      </div>
  </div>
    <!-- DataTales Example -->
  <div class="col-md-12 mb-4">
    <div class="card shadow mb-4">
          <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary text-uppercase">Productos</h6>
          </div>
          <div class="card-body">
              <div class="table-responsive">
                  <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                      <thead>
                          <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Stock</th>
                            <th class="text-center">Baja</th>
                          </tr>
                      </thead>
                      <tfoot>
                        <tr>
                          <th>ID</th>
                          <th>Nombre</th>
                          <th>Stock</th>
                          <th class="text-center" >Baja</th>
                        </tr>
                      </tfoot>
                      
                      <tbody id="table-product-body">
                        {{#each ejercicios}}
                            <tr id="ejercicio-{{this.id}}">
                                <td><button type="button" data-bs-url="{{this.url}}" data-bs-id="{{this.id}}" data-bs-nombre="{{this.nombre}}" data-bs-tecnica="{{this.tecnica}}"   class="btn btn-outline-warning btn-sm btn-open-edit-modal" data-bs-toggle="modal" data-bs-target="#modalagregaejercicio"><i class="bi bi-pencil"></i> <strong>{{this.nombre}}</strong></button></td>
                                <td><i class=""></i>{{this.tecnica}}</td>
                                <td><a href="{{this.url}}" target="_blank" >  {{this.url}}<i class="bi bi-youtube"></i> </a></td>

                                
                                <td class="text-center" style="width: 50px;">
                                  
                                  <button data-bs-toggle="tooltip" data-bs-offset="0,4" data-bs-placement="top" data-bs-html="true" title="" data-bs-original-title="<i class='bx bx-trash bx-xs' ></i> <span>Eliminar producto</span>" onclick="peticionAjax('/socios/eliminaejer?id={{this.id}}','GET','true','true')" class="btn btn-icon btn-outline-danger"><i class="bx bx-trash"></i></button>
                                   
                                </td>
                            </tr>
                        {{/each}}
                      </tbody>
                  </table>
              </div>
          </div>
      </div>
  </div> 
</div>
