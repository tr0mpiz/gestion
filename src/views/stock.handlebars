
<div class="modal fade" id="modalagregaejercicio" tabindex="-1" style="display: none;" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-simple modal-edit-user">
    <div class="modal-content p-3 p-md-5">
      <div class="modal-body">
        <div class="text-center mb-4">
          <h3>Movimiento a Stock</h3>
          <p>En esta seccion toda la informacion del movimiento</p>
        </div>
        <form id="modalagregaejercicioForm" class="row g-3 fv-plugins-bootstrap5 fv-plugins-framework" method="POST" onsubmit="return false" novalidate="novalidate">

         <div class="form-group  col-md-2  d-none ">
            <label>ID</label>
            <input class="requerido  text-uppercase form-control"  type="number" name="id" id="id" value="0">
            
            <div class="invalid-feedback">
              Complete el campo!
            </div>
          </div>
          <div class="col-md-5">
              <label for="producto" class="form-label">Producto:</label>
              <select id="producto" name="producto" class="form-select" required>
                <option value="-3">Seleccione un producto</option>
                  {{#each productos}}
                      <option value="{{this.id}}">{{this.nombre}}</option>
                  {{/each}}
              </select>
          </div>
          <div class="col-md-5">
              <label for="tipomovimiento" class="form-label">Movimiento:</label>
              <select id="tipomovimiento" name="tipomovimiento" class="form-select" required>
                  {{#each estados}}
                      <option value="{{this.estado}}">{{this.descripcion}}</option>
                  {{/each}}
              </select>
          </div>
          <div class="form-group  col-md-2">
            <label>Cantidad</label>
            <input class="requerido  text-uppercase form-control"  type="number" name="cantidad" id="cantidad" value="0">
            
            <div class="invalid-feedback">
              Complete el campo!
            </div>
          </div>
          <div class="form-group  col-md-2 d-none">
            <label>Tarea asociada</label>
            <input class="requerido  text-uppercase form-control"  type="number" name="idtarea" id="idtarea" value="0">
            
            <div class="invalid-feedback">
              Complete el campo!
            </div>
          </div>

          
          
         
          <div class="col-12 text-center">
            <button type="submit" class="btn btn-success me-sm-3 me-1">Confirmar</button>
            <button type="reset" class="btn btn-secondary me-sm-3 me-1" data-bs-dismiss="modal" aria-label="Close">Cancelar</button>
          </div>
        <input type="hidden"></form>
      </div>
    </div>
  </div>
</div>
