<div class="modal fade" id="tareasModal" tabindex="-1"  style="display: none;" aria-hidden="true">
  <div class="modal-dialog modal-xl modal-simple modal-enable-otp modal-dialog-centered" data-select2-id="80">
    <div class="modal-content p-3 p-md-5" data-select2-id="79">
      <div class="modal-body">
        <div class="text-center">
          <h3 class="mb-2">Tareas</h3>
          <p>En esta seccion aparecen los Gestio y sus Tareas</p>
        </div>
      </div>
      <form id="agregarItemTareaForm" class="row g-3 m-1">
          <div class="col-md-12 mb-4 pb-2">
            <label for="idtarea" class="form-label">Tarea</label>
          <select id="idtarea" name="idtarea" class="form-select form-select-lg share-project-select select2-hidden-accessible" data-allow-clear="true" tabindex="-1" aria-hidden="true" data-select2-id="select2Basic">
              <option value="-3">Seleccione una tarea</option>
              {{#each tareas}}
                <option value="{{this.id}}">{{this.id}}</option>
              {{/each}}
          </select>
          </div>
           <div class="col-md-5">
              <label for="serie" class="form-label">Cliente:</label>
              <select id="cliente" name="cliente" class="form-select" required>
                  <option value="-3">Seleccione un cliente</option>
                  {{#each clientes}}
                      <option value="{{this.id}}">{{this.razonsocial}}</option>
                  {{/each}}
              </select>
          </div>
          <div class="col-md-5">
              <label for="producto" class="form-label">Productos:</label>
              <select id="producto" name="producto" class="form-select" required>
                <option value="-3">Seleccione un producto</option>
                  {{#each productos}}
                      <option value="{{this.id}}">{{this.descripcion}}</option>
                  {{/each}}
              </select>
          </div>
          <div class="col-md-2">
              <label for="cantidad" class="form-label">Cantidad:</label>
              <input type="number" id="cantidad" name="cantidad" class="form-control" required>
          </div>
          <div class="col-md-12">
              <label for="operador" class="form-label">Operador:</label>
              <select id="operador" name="operador" class="form-select" required>
                <option value="-3">Seleccione un operador</option>
                  {{#each operadores}}
                      <option value="{{this.id}}">{{this.nombre}} {{this.apellido}}</option>
                  {{/each}}
              </select>
          </div>
          
          
         
      
          
          <div class="col-12 text-center">
              <button type="submit" class="btn btn-success">Agregar 
                <i class="bi bi-arrow-down-circle"></i>
              </button>
          </div>

      </form>
      <h4 class="mb-4 pb-2" id="cantEjercicios"></h4>
      <table class="table table-bordered" id="dataTableEjercicios" width="100%" cellspacing="0">
          <thead>
              <tr>
                <th>Cliente</th>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Operador</th>
                <th class="text-center">Acciones</th>
              </tr>
          </thead>
          <tfoot>
            <tr>
              <th>Cliente</th>
              <th>Producto</th>
              <th>Cantidad</th>
              <th>Operador</th>
              <th class="text-center">Acciones</th>
            </tr>
          </tfoot>
          
          <tbody >
          </tbody>
      </table>
      <div class="d-flex align-items-center mt-4 align-items-sm-center">
        <i class="bx bx-user me-2"></i>
        <div class="d-flex justify-content-between flex-grow-1 align-items-center flex-wrap gap-2">
          <h6 class="mb-0">Gestio - Tareas</h6>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="modal fade" id="modalagregasocio" tabindex="-1" style="display: none;" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-simple modal-edit-user">
    <div class="modal-content p-3 p-md-5">
      <div class="modal-body">
        <div class="text-center mb-4">
          <h3>Alta de tarea</h3>
          <p>Dale al boton de alta para crear la tarea.</p>
        </div>
        <form id="addSocio" class="row g-3 fv-plugins-bootstrap5 fv-plugins-framework" method="POST">
              <input type="hidden" id="id" name="id" value="0">
              <!-- Fin del campo oculto para el ID -->

              <div class="col-12 col-md-12 fv-plugins-icon-container d-none">
                <label for="operadoralta" class="form-label">Operador:</label>
                <select id="operadoralta" name="operadoralta" class="form-select" required>
                  <option value="-3">Seleccione un operador</option>
                    {{#each operadores}}
                        <option value="{{this.id}}">{{this.nombre}} {{this.apellido}}</option>
                    {{/each}}
                </select>
              </div>
              <div class="col-12 col-md-6 fv-plugins-icon-container d-none">
                <label for="fechadecreacion" class="form-label">Fecha de Creacion:</label>
                <input type="date" id="fechadecreacion" name="fechadecreacion"  class="form-control" >
              </div>
              <div class="col-12 col-md-6 fv-plugins-icon-container d-none">
                <label for="fechadecumplimiento" class="form-label">Fecha de Cumplimiento:</label>
                <input type="date" id="fechadecumplimiento" name="fechadecumplimiento"  class="form-control" >
              </div>
          <div class="col-12 text-center">
            <button type="submit" class="btn btn-primary me-sm-3 me-1">Alta</button>
            <button type="reset" class="btn btn-danger" data-bs-dismiss="modal" aria-label="Close">Cerrar</button>
          </div>
        <input type="hidden"></form>
      </div>
    </div>
  </div>
</div>

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"> GESTION/</span> TAREAS </h4>
<div class="container">
<div class="row">
    <!-- Earnings (Monthly) Card Example -->
 
  <div class="col-md-12 mb-4">
      <div class="card">
          <div class="d-flex align-items-end row">
              <div class="col-sm-7">
              <div class="card-body">
                  <h5 class="card-title text-primary">GESTION </h5>
                  <p class="mb-4">En esta <span class="fw-bold">seccion</span> aparecen las tareas y sus detalles</p>

                  <a href="/workout" class="btn btn-sm btn-outline-primary disabled">Ver Productos </a>
                  <button type="button" class="btn btn-sm  btn-primary " data-bs-toggle="modal" data-bs-target="#modalagregasocio">Crear Tarea</button>
              </div>
              </div>
              <div class="col-sm-5 text-center text-sm-left">
              <div class="card-body pb-0 px-0 px-md-4">
                  <img src="../assets/img/illustrations/man-with-laptop-light.png" height="140" alt="View Badge User" data-app-dark-img="illustrations/man-with-laptop-dark.png" data-app-light-img="illustrations/man-with-laptop-light.png">
              </div>
              </div>
          </div>
      </div>
  </div>
    <!-- DataTales Example -->
  <div class="col-md-12 mb-4">
    <div class="card shadow mb-4">
          <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary text-uppercase">Tareas</h6>
          </div>
          <div class="card-body">
              <div class="table-responsive">
                  <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                      <thead>
                          <tr>
                            <th class="text-center">Tarea</th>
                            <th>Cliente/s</th>
                            
                            <th>Fecha de creacion</th>
                            <th class="text-center">Acciones</th>
                          </tr>
                      </thead>
                      <tfoot>
                        <tr>
                          <th class="text-center">Tarea</th>
                          <th>Cliente/s</th>
                          
                          <th>Fecha de creacion</th>
                          <th class="text-center">Acciones</th>
                        </tr>
                      </tfoot>
                      
                      <tbody id="table-product-body">
                        {{#each tareas}}
                            <tr id="tarea-{{this.id}}" class="" >
                                <td class="text-center">{{this.id}}</td>
                                <td><i class="clientes"></i> <strong>{{this.clientes}}</strong></td>
                                <td>{{this.fechadecreacion}}</td>
                                <td class="text-center">
                                  {{#compare this.this.estado 1}} <button class=" btn btn-icon btn-outline-info ml-1" data-idtarea="{{this.id}}" data-bs-toggle="modal" data-bs-target="#tareasModal"><i class="bx bx-clipboard"></i></button> <button data-bs-toggle="tooltip" data-bs-offset="0,4" data-bs-placement="top" data-bs-html="true" title="" data-bs-original-title="<i class='bx bx-check bx-xs' ></i> <span>Tarea {{this.id}} cumplida </span>" onclick="peticionAjax('/socios/eliminatarea?id={{this.id}}','GET','true','true')" class="btn btn-icon btn-outline-success ml-1"><i class="bx bx-check"></i></button> {{/compare}}
                                   {{#compare this.this.estado 0 }} {{this.fechadecumplimiento}} {{/compare}}
                                </td>
                            </tr>
                        {{/each}}
                      </tbody>
                  </table>
              </div>
          </div>
      </div>
  </div> 
</div>
