<div class="container">
<div class="row">
    <!-- Earnings (Monthly) Card Example -->
 
  <div class="col-md-12 mb-4">
      <div class="card">
          <div class="d-flex align-items-end row">
              <div class="col-sm-7">
              <div class="card-body">
                  <h5 class="card-title text-primary">CLIENTES </h5>
                  <p class="mb-4">En esta <span class="fw-bold">seccion</span> aparecen los clientes y su informacion</p>

                  <a href="/socios" class="btn btn-sm btn-outline-primary">Ver Tareas</a>
                  <button type="button" class="btn btn-sm  btn-primary " data-bs-toggle="modal" data-bs-target="#modalagregaejercicio">Agregar Cliente</button>
              </div>
              </div>
              <div class="col-sm-5 text-center text-sm-left d-none d-sm-block">
              <div class="card-body pb-0 px-0 px-md-4">
                  <img src="../assets/img/illustrations/man-with-laptop-light.png" height="140" alt="View Badge User" data-app-dark-img="illustrations/man-with-laptop-dark.png" data-app-light-img="illustrations/man-with-laptop-light.png">
              </div>
              </div>
          </div>
      </div>
  </div>
    <!-- DataTales Example -->
  <div class="col-md-12 mb-4">
    <div class="card shadow mb-4">
          <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary text-uppercase">Clientes</h6>
          </div>
          <div class="card-body">
              <div class="table-responsive">
                  <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                      <thead>
                          <tr>
                            <th>Id</th>
                            <th>Razon social</th>
                            <th class="text-center">Opciones</th>
                          </tr>
                      </thead>
                      <tfoot>
                        <tr>
                          <th>Id</th>
                          <th>Razon social</th>
                          <th class="text-center" >Opciones</th>
                        </tr>
                      </tfoot>
                      
                      <tbody id="table-product-body">
                        {{#each clientes}}
                            <tr id="producto-{{this.id}}">
                                <td>{{this.id}}</td>
                                <td>{{this.razonsocial}}</td>
                                <td class="text-center" style="width: 100px;">
                                  <!--
                                  <button data-bs-toggle="tooltip" data-bs-offset="0,4" data-bs-placement="top" data-bs-html="true" title="" data-bs-original-title="<i class='bx bx-trash bx-xs' ></i> <span>Eliminar producto</span>" onclick="peticionAjax('/productos/eliminaItemProducto?id={{this.id}}','GET','true','true')" class="btn btn-icon btn-outline-danger"><i class="bx bx-trash"></i></button>
                                    --> 

                                  <button class=" btn btn-icon btn-outline-success ml-1"  data-bs-nombre="{{this.razonsocial}}" data-bs-id="{{this.id}}"   data-bs-toggle="modal" data-bs-target="#modalagregaejercicio"><i class="bx bx-clipboard"></i></button>
                                </td>
                            </tr>
                        {{/each}}
                      </tbody>
                  </table>
              </div>
          </div>
      </div>
  </div> 
</div>
